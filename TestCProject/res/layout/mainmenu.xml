<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
	style="@style/MainMenuStyle"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:gravity="center"
	android:paddingLeft="30dip"
	android:paddingRight="30dip">
	
	<TextView 
		style="@style/TitleFont"
		android:text="@string/hello"
		android:id="@+id/textview_hello_menu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<Button 
		android:text="@string/button_change_language"
		android:id="@+id/button_change_language"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	/>
	<Button 
		android:text="@string/button_restaurant_menu"
		android:id="@+id/button_restaurant_menu"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	/>
	<Button 
		android:text="@string/button_exit"
		android:id="@+id/button_exit"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	/>
	
</LinearLayout>